<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Incorpally - Home</title>
  <link rel="icon" href="/images/symbol.png" type="image/png">

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
  <link href="/css/media.css" rel="stylesheet">
</head>

<body>

  <!-- Navbar start here -->

  <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top shadow-sm">
    <div class="container-fluid px-3">

      <!-- Brand always on the left -->
  <a class="navbar-brand" href="#">
  <img src="/images/incor logo.PNG" alt="Incorpally Logo" width="140" height="40" class="d-inline-block align-text-top">
</a>


      <!-- Login + Toggler on the right -->
      <div class="d-flex align-items-center order-lg-last">
        <a href="#" class="btn btn-danger me-3">Login</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>

      <!-- Centered collapsible menu -->
      <div class="collapse navbar-collapse justify-content-center text-center mt-3 mt-lg-0" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link text-black fw-normal" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-black fw-normal" href="#services">Services</a>
          </li>
          <li class="nav-item">
            <a class="nav-link text-black fw-normal" href="#contact">Contact</a>
          </li>
        </ul>
      </div>

    </div>
  </nav>

  <!-- Navbar end here -->

  <!-- Hero start here -->
  <header class="hero-section text-white text-center d-flex align-items-center">
    <div class="container">
      <h1 class="display-4 fw-bold">Incorporate with Confidence</h1>
      <!-- <input type="text" placeholder= class="form control w-50 mx-auto my-3"> -->
      <form class="d-flex my-4" role="search">
        <input class="form-control me-2" type="search" placeholder="Search for services..." aria-label="Search">
        <button class="btn btn-danger" type="submit">Search</button>
      </form>
      <p class="lead btn btn-success" style="color:#ffffff">Company Registration | GST | Trademark | Legal Docs</p>
      <br>
      <a href="#services" class="btn btn-light btn-lg mt-3">Explore Services</a>
    </div>
  </header>

  <!-- Hero end here -->

  <hr>

  <!-- Services -->
  <section class="py-5 bg-light" id="services">
    <div class="container rounded">
      <h2 class="text-center my-4">Popular Services</h2>
      <div class="row g-4">
        <div class="col-md-3">
          <div class="card text-center h-100 shadow">
            <div class="card-body">
              <i class="fas fa-building fa-2x mb-3 text-primary"></i>
              <h5>Private Ltd Registration</h5>
              <p>Start your company in 7 days.</p>
              <a href="/service/private-ltd-registration" class="btn btn-outline-primary">Apply</a>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card text-center h-100 shadow">
            <div class="card-body">
              <i class="fas fa-receipt fa-2x mb-3 text-success"></i>
              <h5>GST Registration</h5>
              <p>File returns, get GST number.</p>
              <a href="/service/gst-registration" class="btn btn-outline-success">Apply</a>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card text-center h-100 shadow">
            <div class="card-body">
              <i class="fas fa-shield-alt fa-2x mb-3 text-danger"></i>
              <h5>Trademark</h5>
              <p>Protect your brand legally.</p>
              <a href="/service/trademark" class="btn btn-outline-danger">Apply</a>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card text-center h-100 shadow">
            <div class="card-body">
              <i class="fas fa-utensils fa-2x mb-3 text-warning"></i>
              <h5>FSSAI License</h5>
              <p>Start your food business legally.</p>
              <a href="/service/fssai" class="btn btn-outline-warning">Apply</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <hr>


  <!-- service section  start here-->



  <div class="container py-3" id="services">
  <h2 class="text-center mb-4">Explore Our Services</h2>
  <div class="row g-4 justify-content-center">
    <% if (Array.isArray(serviceCategories) && serviceCategories.length > 0) { %>
      <% serviceCategories.forEach(function(cat) { %>
        <div class="col-lg-2 col-md-4 col-12 d-flex">
          <div class="card h-100 shadow-sm w-100">
            <div class="card-body">
              <div class="text-center mb-3">
                <img src="/images/<%= cat.image %>" alt="service image" style="width: 87px; height: 60px;">
              </div>
              <h5 class="card-title text-center two-line-title">
                <%= cat.title %>
              </h5>
              <p class="text-center text-muted">From <strong><%= cat.price %></strong></p>
              <ul class="list-group list-group-flush ">
                <% if (Array.isArray(cat.services)) { %>
                  <% cat.services.forEach(function(sub) { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center fs-6 ">
                      <a href="/service/<%= sub.toLowerCase().replace(/\s+/g, '-') %>">
                        <%= sub %>
                      </a>
                      <i class="fas fa-chevron-right text-muted"></i>
                    </li>
                  <% }); %>
                <% } %>
              </ul>
            </div>
          </div>
        </div>
      <% }); %>
    <% } %>
  </div>
</div>



  <hr>

  <!-- service section  end here-->

  <!-- How It Works -->
  <section class="text-center py-5">
    <div class="container">
      <h2>How It Works</h2>
      <div class="row pt-4">
        <div class="col-md-3"><i class="fas fa-list fa-2x"></i>
          <p>Choose Service</p>
        </div>
        <div class="col-md-3"><i class="fas fa-upload fa-2x"></i>
          <p>Upload Docs</p>
        </div>
        <div class="col-md-3"><i class="fas fa-user-tie fa-2x"></i>
          <p>We Process</p>
        </div>
        <div class="col-md-3"><i class="fas fa-check-circle fa-2x"></i>
          <p>You Relax</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-3" id="contact">
    <p>&copy; 2025 Incorpally. All rights reserved.</p>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
